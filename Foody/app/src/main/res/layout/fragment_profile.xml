<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />
    <View
        android:layout_width="115dp"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <View
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/dark_cyan_rounded_box"
            android:backgroundTint="@color/dark_cyan"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:tint="@color/white"
            android:backgroundTint="@color/light_cyan"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/roundedImageView" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:hint="Email"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/white"
        app:hintTextColor="@color/white"
        android:focusable="false"
        android:textColorHint="@color/dark_cyan">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="testemailtestemail"
            android:inputType="textPassword"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:hint="Password"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/white"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/dark_cyan">
        <com.google.android.material.textfield.TextInputEditText
            android:focusable="false"
            android:text="testpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>